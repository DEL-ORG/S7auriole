# Source: espresso/templates/pdb-1.yaml
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: shop-review1
  labels:
    app: shop-review1
spec:
  maxUnavailable: 2
  selector:
    matchLabels:
      app: shop-review1
---
