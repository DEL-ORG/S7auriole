# Source: espresso/templates/hpa-1.yaml
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: shop-review1
  labels:
    app: shop-review1
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: shop-review1
  minReplicas: 2
  maxReplicas: 5
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 60
---
