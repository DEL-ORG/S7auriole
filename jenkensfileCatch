pipeline {
    agent {
        kubernetes {
            containerTemplate {
                name 'helm'
                image 'lachlanevenson/k8s-helm:v3.1.1'
                ttyEnabled true
                command 'cat'
            }
        }
    }

    stages {
        stage('deploy shop-product') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/shop-product') {
                            sh 'helm install shop-product .'
                        echo 'Building shop-prodcut...'
                        }
                    }
                }
            }
        }

        stage('deploy shop-review') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/shop-review') {
                            sh 'helm install shop-review .'
                        echo 'Building shop-review...'
                        }
                    }
                }
            }
        }

        stage('deploy shop-web') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/shop-web') {
                            sh 'helm install shop-web  .'
                        echo 'Building shop-web...'
                        }
                    }
                }
            }
        }

        stage('deploy redis-ha') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/redis-ha') {
                            sh 'helm install redis-ha .'
                        echo 'Building redis-ha...'
                        }
                    }
                }
            }
        }

        stage('deploy postgresql-ha') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/postgresql-ha') {
                            sh 'helm install postgresql-ha  .'
                        echo 'Building postgresql-ha...'
                        }
                    }
                }
            }
        }

        stage('build Grafana') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/grafana') {
                            sh 'helm install grafana .'
                        echo 'Building Grafana...'
                    }
                }
            }
        }

        stage('build Prometheus') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script {
                        dir('ESPRESSO/prometheus') {
                            sh 'helm install prometheus .'
                        echo 'Building Prometheus...'
                    }
                }
            }
        }

        stage('sleep for 4 minutes') {
            steps {
                script {
                    sleep time: 240, unit: 'SECONDS'
                }
            }
        }

        stage('helm delete releases') {
            steps {
                script {
                    sh 'helm delete shop-product'
                    sh 'helm delete shop-review'
                    sh 'helm delete shop-web'
                    sh 'helm delete redis-ha'
                    sh 'helm delete postgresql-ha'
                    sh 'helm delete grafana'
                    sh 'helm delete prometheus'
                }
            }
        }
    }
}
